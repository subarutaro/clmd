#include "md.hxx"

MD::MD(const int _nmol,const DorF _dens,const DorF _temp){
  cout << "# ---construct MD---" << endl;

  ndim=1;
  while(_nmol > 4*ndim*ndim*ndim) ndim++;
  nmol = 4*ndim*ndim*ndim;
  if(nmol != _nmol)
    cerr << "warning: # of molecules(= " << _nmol << ") must be 4*n*n*n. changed to nearest one (= " << nmol << ")." << endl;

  dt   = 0.000930f;
  dth  = 0.5f * dt;
  dens = _dens;
  temp = _temp;

  cs = powf((DorF)nmol/dens,1./3.);
  csh = 0.5f * cs;

  if(csh > 5.f) rcut = 5.f;
  else          rcut = csh;

  r = (DorF*)calloc(3*nmol,sizeof(DorF));
  assert(r != NULL);
  rx = &r[0];
  ry = &r[nmol];
  rz = &r[2*nmol];

  v = (DorF*)calloc(3*nmol,sizeof(DorF));
  assert(v != NULL);
  vx = &v[0];
  vy = &v[nmol];
  vz = &v[2*nmol];

  f = (DorF*)calloc(3*nmol,sizeof(DorF));
  assert(f != NULL);
  fx = &f[0];
  fy = &f[nmol];
  fz = &f[2*nmol];
}

MD::~MD(){
  free(r);
  free(v);
  free(f);
}

void MD::SetCoorFCC(){
  double unit = cs / (double)ndim;
  {
    int i = 0;
    for(int x=0;x<ndim;x++){
      for(int y=0;y<ndim;y++){
	for(int z=0;z<ndim;z++){
	  r[3*i+0] = unit * x;
	  r[3*i+1] = unit * y;
	  r[3*i+2] = unit * z;
	  i++;
	  r[3*i+0] = unit * (x+0.5);
	  r[3*i+1] = unit * (y+0.5);
	  r[3*i+2] = unit * z;
	  i++;
	  r[3*i+0] = unit * x;
	  r[3*i+1] = unit * (y+0.5);
	  r[3*i+2] = unit * (z+0.5);
	  i++;
	  r[3*i+0] = unit * (x+0.5);
	  r[3*i+1] = unit * y;
	  r[3*i+2] = unit * (z+0.5);
	  i++;
	}
      }
    }
    if(i != nmol){
      cerr << "error: # of moleucles in SetCoorFCC != nmol." << endl;
      exit(EXIT_FAILURE);
    }
  }
  for(int i=0;i<nmol;i++){
    r[3*i+0] -= 0.5*cs;
    r[3*i+1] -= 0.5*cs;
    r[3*i+2] -= 0.5*cs;
  }
}

void MD::SetVelRandom(){
  for(int i=0;i<nmol;i++){
    v[3*i+0] = (double)rand()/(double)RAND_MAX;
    v[3*i+1] = (double)rand()/(double)RAND_MAX;
    v[3*i+2] = (double)rand()/(double)RAND_MAX;
  }
  KillMomentum();
  VelocityScaling();
}

void MD::VelocityScaling(){
  CalcKineticEnergy();
  const double scale = sqrt(1.5*nmol*temp/kin);
  for(int i=0;i<nmol;i++){
    v[3*i+0] *= scale;
    v[3*i+1] *= scale;
    v[3*i+2] *= scale;
  }
  kin *= scale*scale;
  KillMomentum();
}

void MD::KillMomentum(){
  DorF mom[3] = {0.f,0.f,0.f};
  for(int i=0;i<nmol;i++){
    mom[0] += v[3*i+0];
    mom[1] += v[3*i+1];
    mom[2] += v[3*i+2];
  }
  mom[0] /= (double)nmol;
  mom[1] /= (double)nmol;
  mom[2] /= (double)nmol;
  for(int i=0;i<nmol;i++){
    v[3*i+0] -= mom[0];
    v[3*i+1] -= mom[1];
    v[3*i+2] -= mom[2];
  }
}

void MD::CalcKineticEnergy(){
  kin = 0.0;
  for(int i=0;i<nmol;i++){
    const double vx = v[3*i+0];
    const double vy = v[3*i+1];
    const double vz = v[3*i+2];
    kin += vx*vx + vy*vy + vz*vz;
  }
  kin *= 0.5f;
}

void MD::IntegrateCoor(){
  for(int i=0;i<nmol;i++){
    r[3*i+0] += v[3*i+0] * dt;
    r[3*i+1] += v[3*i+1] * dt;
    r[3*i+2] += v[3*i+2] * dt;
      if(r[3*i+0] <= -csh) r[3*i+0] += cs; if(r[3*i+0] > csh) r[3*i+0] -= cs;
      if(r[3*i+1] <= -csh) r[3*i+1] += cs; if(r[3*i+1] > csh) r[3*i+1] -= cs;
      if(r[3*i+2] <= -csh) r[3*i+2] += cs; if(r[3*i+2] > csh) r[3*i+2] -= cs;
  }
}

void MD::IntegrateVel(){
  for(int i=0;i<nmol;i++){
    v[3*i+0] += f[3*i+0] * 0.5*dt;
    v[3*i+1] += f[3*i+1] * 0.5*dt;
    v[3*i+2] += f[3*i+2] * 0.5*dt;
  }
}

void MD::CalcForce(){
  for(int i=0;i<3*nmol;i++) f[i] = 0.0;
  pot = 0.0;

  const double csh = 0.5*cs;

  for(int i=0;i<nmol;i++){
    const double rxi = r[3*i+0];
    const double ryi = r[3*i+1];
    const double rzi = r[3*i+2];
    double fxi = 0.0;
    double fyi = 0.0;
    double fzi = 0.0;
    for(int j=0;j<nmol;j++){
      if(i==j) continue;
      double dx = rxi - r[3*j+0];
      double dy = ryi - r[3*j+1];
      double dz = rzi - r[3*j+2];
      if(dx <= -csh) dx += cs; if(dx > csh) dx -= cs;
      if(dy <= -csh) dy += cs; if(dy > csh) dy -= cs;
      if(dz <= -csh) dz += cs; if(dz > csh) dz -= cs;

      const double r02 = dx*dx + dy*dy + dz*dz;
      const double r02i = 1.0 / r02;
      const double r06i = r02i * r02i *r02i;

      pot += 2.0 * r06i * (r06i - 1.0);
      const double ftmp = 48.0 * r06i * (r06i - 0.5) * r02i;
      fxi += ftmp * dx;
      fyi += ftmp * dy;
      fzi += ftmp * dz;
    }
    f[3*i+0] = fxi;
    f[3*i+1] = fyi;
    f[3*i+2] = fzi;
  }
}

void MD::OutputCDV(const string filename){
  ofstream ofs(filename.c_str());
  ofs << "'box_sx=" << -csh << ",box_ex="<< csh;
  ofs << ",box_sy=" << -csh << ",box_ey="<< csh;
  ofs << ",box_sz=" << -csh << ",box_ez="<< csh;
  ofs << endl;
  for(int i=0;i<nmol;i++){
    ofs << ' ' << i     << " " << "0";
    ofs << ' ' << rx[i] << ' ' << ry[i] << ' ' << rz[i];
    ofs << ' ' << vx[i] << ' ' << vy[i] << ' ' << vz[i];
    ofs << ' ' << fx[i] << ' ' << fy[i] << ' ' << fz[i];
    ofs << endl;
  }
}

void MD::DisplayEnergies(ostream &os){
  static int s = 0;
  os << s++ << ' ' << pot << ' ' << kin << ' ' << pot + kin << endl;
}

void MD::DisplayConditions(ostream &os){
  os << "# Number of molecules:\t" << nmol   << endl;
  os << "# Density:\t"        << dens        << endl;
  os << "# Temperature:\t"    << temp        << endl;
  os << "# Cell size:\t"      << cs          << endl;
  os << "# Cutoff radii:\t"   << rcut        << endl;
  os << "# Delta time:\t"     << dt << ' ' << dth << endl;
  os << endl;
}
